<resources>

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/maroon</item>
        <item name="colorPrimaryDark">@color/maroonDark</item>
        <item name="colorAccent">@color/mustard</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents" >
        <item name="colorPrimary">@color/maroon</item>
        <item name="colorPrimaryDark">@color/maroonDark</item>
        <item name="colorAccent">@color/mustard</item>

        <item name="android:buttonStyle">@style/Button.Dark</item>
    </style>

    <style name="Button.Light" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textSize">15sp</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="CenterWord" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">center</item>
    </style>

    <style name="Word" parent="CenterWord">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Type" parent="CenterWord">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Definition" parent="CenterWord">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
