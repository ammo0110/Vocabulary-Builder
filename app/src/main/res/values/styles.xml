<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonMaterial" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Word" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/airforceBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Type" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/airforceBlue</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Definition" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/amaranth</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
